<section class="banner">
  <%# <%= image_tag "banner.jpg", alt: "banner marvel", class:"banner-img" %>
</section>
<section id="trending">
  <div class="d-flex row justify-content-between p-3 m-2">
    <div class="p-3 d-flex gap-5">
      <h2 class="txt-title col-md-9">Categories</h2>

      <div class="input-group rounded col-md-3 search">
        <input type="search" class="" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
        <span class="input-group-text border-0" id="search-addon">
          <i class="fas fa-search" style="color: #202020;"></i>
        </span>
      </div>

    </div>
  
      <ul class="d-flex gap-4 slick">
        <% @listGenres.genres.each do |genre| %>
          <li class="btn-categories slide white"><%= genre.name %></li>
        <% end %>
      </ul>
  </div>
  <div class="row gap-2 m-4 col-12">
    <% @listMovies.results.each do |movie| %>
      <div class="card col-4" style="width: 18rem;">
        <img src=<%= "https://image.tmdb.org/t/p/w500#{movie.poster_path}" %> class="card-img-top" alt="...">
        <div class="card-body">
          <div class="d-flex justify-content-between">
            <h5 class="card-title text-truncate"><%= movie.original_title %></h5>
            <h6 class="card-title bg-warning px-2 rounded"><%= movie.vote_average %></h6>
          </div>
          <p class="card-text custom-text-truncate"><%= movie.overview %></p>
          <div class="d-flex justify-content-between align-items-center">
            <h6><%= movie.release_date[0, 4] %></h6>
            <%# <a href="#" class="btn btn-info">Rent $0.00</a> %>
            <%= link_to "see more", movie_details_path(movie.id), class:"btn btn-info" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>
