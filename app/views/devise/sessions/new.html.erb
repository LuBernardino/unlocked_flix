<section class="gradient-form">
  <div>
    <div class="row d-flex justify-content-center align-items-center">
      <div class="">
        <div class="text-white">
          <div class="row">

            <div class="col-lg-6 p-5">
              <div class="card-body p-md-5 mx-md-4">

                <div class="text-center">
                  <%= image_tag "logo_unlockedflix.png", alt: "logotype", class: "img-fluid mt-1 mb-5 pb-1" %>
                </div>

                <form>
                  <p>Please login to your account</p>

                  <div class="mb-4">
                    <%= text_field_tag 'email', nil, class: 'form-control', placeholder: 'Phone number or email address' %>
                  </div>

                  <div class="mb-4">
                    <%= password_field_tag 'password', nil, class: 'form-control', placeholder: 'Password' %>
                  </div>

                  <div class="row">
                    <%= button_tag 'Log in', class: 'btn btn-primary btn-block fa-lg gradient-custom-2', type: 'button' %>
                    <%= link_to 'Forgot password?', '#!', class: 'text-white' %>
                  </div>

                  <div class="d-flex align-items-center justify-content-center  my-5">
                    <p class="mb-0 me-2">Don't have an account?</p>
                    <%= button_tag 'Create new', class: 'btn-signup', type: 'button' %>
                  </div>

                </form>

              </div>
            </div>
            <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
              <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                <h4 class="mb-4">Unlock Cinema at Home!</h4>
                <p class="small mb-0">
                  your gateway to a world of on-demand entertainment.
                  Transform your living room into a cinematic haven 
                  by exploring our extensive film collection that includes 
                  the latest releases, timeless classics and cinematic gems.
                  Browse with ease, choose your favorite movie and immerse 
                  yourself in an exciting cinematic experience, all without 
                  leaving home.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
